  "homepage": "https://wiki.ecohackerfarm.org/powerplant:start",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ecohackerfarm/powerplant.git"
  },
  "dependencies": {
    "axios": "1.8.4",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.20.3",
    "cors": "2.8.5",
    "express": "^5.1.0",
    "express-pouchdb": "4.2.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^2.2.0",
    "localforage": "1.7.3",
