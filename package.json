    "lodash.isempty": "^4.4.0",
    "pouchdb": "9.0.0",
    "react": "16.8.4",
    "react-bootstrap": "^2.10.9",
    "react-bootstrap-typeahead": "^2.0.2",
    "react-dom": "16.8.4",
    "react-redux": "^5.0.5",
    "react-router-bootstrap": "0.25.0",
    "react-router-dom": "7.5.1",
    "redux": "^3.7.1",
    "redux-logger": "^3.0.6",
